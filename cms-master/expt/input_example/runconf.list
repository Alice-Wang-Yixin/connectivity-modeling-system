&runconf
!====================================================================!
nnests               = 1 
timeMax              = 864000           !in seconds
timestep             = 3600             !in seconds
outputFreq           = 86400            !in seconds
releaseFilename      = "releaseFile" 
!====================================================================!
!Turbulence Module
turb                 = .false.
horDiff              =                  !horizontal diffusivity (m2/s2)
vertDiff             =                  !vertical diffusivity (m2/s2)
turbTimestep         =                  !in seconds
!====================================================================!
!Periodic Boundary Condition
periodicbc           = .false.
!====================================================================!
!Landmask Boundary Condition 
avoidcoast           = .true.
!====================================================================!
!Backward Tracking Module
backward             = .false.
!====================================================================!
!Output files in ASCII instead of netCDF
ascii                = .false.
!====================================================================!
!Flag to limit particle vertical movement to upper layer
upperlevelsurface       = .true.
!====================================================================!
!Flag for looping through the velocity fields
loopfiles               = .false.
loopfilesstartyear      =
loopfilesstartmonth     =
loopfilesstartday       =
loopfilesendyear        =
loopfilesendmonth       =
loopfilesendday         =
!====================================================================!
!Options for saving restart files and restarting
writerestart            = .false.
restartfromfile         = .false.
restartwritefreq        =              !in seconds
!====================================================================!
!Options for mixed layer physics
mixedlayerphysics       = .false.
mixedlayerwmax          =
!====================================================================!
&end
